<div class="container">
  <h1>New Entry for <%= @place.name %></h1>

  <%= form_with model: @entry, url: "/places/#{@place.id}/entries", local: true, html: { class: "needs-validation", enctype: "multipart/form-data" } do |form| %>
    
    <div class="mb-3">
      <%= form.label :title, "Entry Title:", class: "form-label" %>
      <%= form.text_field :title, class: "form-control", required: true %>
    </div>
    
    <div class="mb-3">
      <%= form.label :description, "Entry Description:", class: "form-label" %>
      <%= form.text_area :description, class: "form-control", required: true %>
    </div>
    
    <div class="mb-3">
      <%= form.label :occurred_on, "Date of Visit:", class: "form-label" %>
      <%= form.date_field :occurred_on, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :image, "Upload Image (Optional):", class: "form-label" %>
      <%= form.file_field :image, class: "form-control" %>
    </div>

    <div class="text-end">
      <%= form.submit "Save Entry", class: "btn btn-success" %>
    </div>

  <% end %>

  <%= link_to "Back to Place", "/places/#{@place.id}", class: "btn btn-secondary mt-3" %>
</div>